{
  "name": "root",
  "private": true,
  "homepage": "https://github.com/hapify/hapify#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:hapify/hapify.git"
  },
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run --parallel clean",
    "lint": "lerna run --parallel lint",
    "postinstall": "is-ci || husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "semantic-release": "semantic-release",
    "test": "lerna run --parallel test",
    "update": "lerna run update"
  },
  "commitlint": {
    "extends": [
      "@tractr/commit-config"
    ]
  },
  "prettier": "@tractr/prettier-config",
  "eslintConfig": {
    "extends": "@tractr"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@qiwi/multi-semantic-release": "^3.13.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@tractr/commit-config": "^1.1.3",
    "@tractr/eslint-config": "^1.3.4",
    "@tractr/prettier-config": "^1.3.0",
    "@types/node": "^14.14.37",
    "eslint": "^7.23.0",
    "husky": "^6.0.0",
    "is-ci": "^3.0.0",
    "lerna": "4.0.0",
    "nyc": "^15.1.0",
    "npm-check": "^5.9.2",
    "pinst": "^2.1.6",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.2",
    "ts-essentials": "^7.0.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  }
}
