{
  "name": "@hapify/generator",
  "version": "0.8.0",
  "description": "Generator for Hapify templates",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "update": "npm-check -u",
    "test": "nyc mocha",
    "lint": "prettier --write '**/*.ts'",
    "build": "rimraf dist && tsc -p ."
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:hapify/generator.git"
  },
  "keywords": [
    "hapify",
    "generator"
  ],
  "author": "Edouard Demotes-Mainard <edouard@tractr.net>",
  "license": "MIT",
  "homepage": "https://github.com/hapify/generator#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@hapi/code": "^8.0.2",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "husky": "^4.3.8",
    "mocha": "^8.2.1",
    "npm-check": "^5.9.2",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@hapify/ejs": "^0.4.1",
    "@hapify/syntax": "^0.9.0",
    "@hapify/vm": "^0.3.6",
    "case": "^1.6.3"
  },
  "engines": {
    "node": ">=9"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged --pattern \"**/*.ts\""
    }
  }
}
