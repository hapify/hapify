{
  "extends": "../../tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "experimentalDecorators": true,
    "declaration": false,
    "downlevelIteration": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app/*": ["src/app/*"],
      "@env/*": ["src/environments/*"]
    }
  },
  "include": [
    "src/**/*",
    "e2e/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
